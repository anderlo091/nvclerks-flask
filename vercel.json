{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "no-cache"
      },
      "methods": ["GET", "POST"]
    },
    {
      "src": "/(.*)",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "no-cache"
      },
      "methods": ["GET", "POST"],
      "subdomain": "(.*)"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12"
  }
}
